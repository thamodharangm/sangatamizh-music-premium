// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model AppSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model Song {
  id         String   @id @default(uuid())
  title      String
  artist     String
  category   String   @default("General")
  cover_url  String
  file_url   String
  source_url String?
  created_at DateTime @default(now())

  @@map("songs")
}
